<div class="container">
<h1>The Fellows' Stories</h1>
<br><br>

<table class="table-bordered">
<thead>
      <tr>
        <th>Story</th>
        <th>Category</th>
        <th>Reflection</th>
        <th>Image</th>
        <th>Caption</th>
      </tr>
    </thead>
<tbody.table-hover>
      <tr>
      <% @story.each do |f| %>
        <td><%= f.story %> </td>
        <td><%= f.category %> </td>
        <td><%= f.reflection %> </td>
        <td><%= image_tag f.image.url, width:300 %> </td>
        <td><%= f.caption %></td>
      </tr>
      <% end %><br><hr>
    </tbody>
  </table>
</div>

</html>