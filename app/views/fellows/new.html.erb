<div class="jumbotron">
  <h1>Tell me your story...</h1><hr>
<div class="centered">
  <img src="http://i.imgur.com/ZUqrmG6.png" width="500"><br>
</div>
 
<%= bootstrap_form_for(@fellow, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10")  do |f| %>

  <%= f.text_field :full_name %>

  <%= f.text_field :city_or_program %>

  <%= f.text_area :story, help:"Please write in third person." %>

  <%= f.file_field :picture, help:"Upload your picture here." %>

  <%= f.text_field :caption %>

  <br><br>

<%= f.submit 'Submit' %>

<% end %>
</div>
